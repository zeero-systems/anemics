{
  "name": "@zeero-systems/anemics",
  "version": "0.2.",
  "license": "GPL-3.0",
  "exports": "./mod.ts",
  "tasks": {
    "dev": "deno run --watch temp/index.ts"
  },
  "imports": {
    "-/": "./",
    "~/": "./src/",
    "@std/bdd": "jsr:@std/testing@1.0.15/bdd",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/expect": "jsr:@std/expect@1.0.17",
    "@std/uuid": "jsr:@std/uuid@^1.0.9",
    "@std/mock": "jsr:@std/testing@1.0.15/mock",
    "@deno/postgres": "https://deno.land/x/postgres@v0.19.3/mod.ts",
    "@zeero/commons": "jsr:@zeero-systems/commons@^0.32.4"
  },
  "fmt": {
    "files": {
      "include": [
        "index.ts",
        "mod.ts",
        "src/",
        "test/"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["index.ts", "mod.ts", "src/**/*.ts", "test/**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  }
}
