{
  "name": "@zeero-systems/anemics",
  "version": "0.22.4",
  "license": "GPL-3.0",
  "exports": {
    ".": "./index.ts",
    "./annotations": "./annotations.ts",
    "./decorations": "./decorations.ts",
    "./enums": "./enums.ts",
    "./exceptions": "./exceptions.ts",
    "./guards": "./guards.ts",
    "./middlewares": "./middlewares.ts",
    "./services": "./services.ts"
  },
  "imports": {
    "-/": "./",
    "~/": "./src/",
    "@std/bdd": "jsr:@std/testing@1.0.16/bdd",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/expect": "jsr:@std/expect@1.0.17",
    "@std/mock": "jsr:@std/testing@1.0.16/mock",
    "@deno/postgres": "jsr:@db/postgres@0.19.5",
    "@zeero/commons": "jsr:@zeero-systems/commons@^0.41.9"
  },
  "publish": {
    "include": [
      "LICENSE", 
      "index.ts",
      "annotations.ts",
      "decorations.ts",
      "enums.ts",
      "exceptions.ts",
      "guards.ts",
      "middlewares.ts",
      "services.ts",
      "README.md", 
      "src/**/*.ts"
    ],
    "exclude": ["!dist"]
  },
  "tasks": {
    "dev": "deno run --watch index.ts"
  },
  "fmt": {
    "files": {
      "include": [
        "index.ts",
        "mod.ts",
        "src/",
        "test/"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": [
        "index.ts", 
        "annotations.ts",
        "decorations.ts",
        "enums.ts",
        "exceptions.ts",
        "guards.ts",
        "middlewares.ts",
        "services.ts",
        "src/**/*.ts", 
        "test/**/*.ts"
      ]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "test": {
    "exclude": [
      "tests/services/persister.test.ts"
    ]
  }
}
