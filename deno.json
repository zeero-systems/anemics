{
  "name": "@zeero-systems/anemics",
  "version": "0.26.2",
  "license": "GPL-3.0",
  "exports": {
    ".": "./index.ts",
    "./annotations": "./annotations.ts",
    "./decorations": "./decorations.ts",
    "./enums": "./enums.ts",
    "./exceptions": "./exceptions.ts",
    "./guards": "./guards.ts",
    "./middlewares": "./middlewares.ts",
    "./services": "./services.ts"
  },
  "imports": {
    "-/": "./",
    "~/": "./src/",
    "@std/bdd": "jsr:@std/testing@1.0.16/bdd",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/expect": "jsr:@std/expect@1.0.17",
    "@std/mock": "jsr:@std/testing@1.0.16/mock",
    "@deno/postgres": "jsr:@db/postgres@0.19.5",
    "@zeero/commons": "jsr:@zeero-systems/commons@^0.43.0"
  },
  "publish": {
    "include": [
      "LICENSE", 
      "index.ts",
      "annotations.ts",
      "decorations.ts",
      "enums.ts",
      "exceptions.ts",
      "guards.ts",
      "middlewares.ts",
      "services.ts",
      "README.md", 
      "src/**/*.ts"
    ],
    "exclude": ["!dist"]
  },
  "tasks": {
    "dev": "deno run --watch index.ts"
  },
  "fmt": {
    "include": [
      "index.ts",
      "mod.ts",
      "src/",
      "tests/"
    ],
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "include": [
      "index.ts", 
      "annotations.ts",
      "decorations.ts",
      "enums.ts",
      "exceptions.ts",
      "guards.ts",
      "middlewares.ts",
      "services.ts",
      "src/**/*.ts", 
      "tests/**/*.ts"
    ],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "test": {
    "exclude": [
      "tests/services/migrator.test.ts",
      "tests/services/persister.test.ts"
    ]
  }
}
